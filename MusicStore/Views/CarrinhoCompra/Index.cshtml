@model CarrinhoCompraViewModel
<div class="container">
    <div class="row">


        <div>
            <h4><img src="~/images/CarrinhoCompra.jpg" /> Seu carrinho de compras : </h4>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Instrumento</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Instrumento.InstrumentoNome</td>
                        <td class="text-right">@item.Instrumento.Preco.ToString("c")</td>

                        <td class="text-right">
                            @((item.Quantidade * item.Instrumento.Preco).ToString("c"))
                        </td>

                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                               asp-route-instrumentoId="@item.Instrumento.InstrumentoId">
                                <img src="~/images/excluir.png" class="img-fluid" style="width: 24px; height: 24px;" alt="Excluir">
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total: </td>
                    <td class="text-right">
                        @Model.CarrinhoCompraTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Instrumentos" asp-action="List">Continuar Comprando</a>
            </div>
        </div>

    </div>
</div>
